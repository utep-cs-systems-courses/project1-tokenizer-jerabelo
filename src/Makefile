# compiler flags. -g for debug, -03 for optimization

CFLAGS = -g -03

#first target is built by default
all: tokenizer

#history.o: history.h

tokenizer.o: tokenizer.h

uimain.o: history.h tokenizer.h

#$@=target, $^=prerequisites

tokenizer: tokenizer.o uimain.o

	cc -o $@ $^ $(CFLAGS)

#deletes files generated by compilation

clean: rm -f *.o tokenizer

#Runs uimain.c

run: tokenizer
	./tokenizer
